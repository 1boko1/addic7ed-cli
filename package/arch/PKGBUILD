pkgname=addic7ed-cli
pkgver=0.1.9
pkgrel=1
pkgdesc="Addic7ed command-line interface"
arch=('any')
url="https://github.com/BenoitZugmeyer/addic7ed-cli"
license=('Expat')
groups=()
depends=('python2'
         'python2-pyquery'
         'python2-requests')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("http://github.com/BenoitZugmeyer/${pkgname}/archive/v${pkgver}.zip")
md5sums=('21f188ce133f6959e6a6bc4b0cbf7bbf')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
